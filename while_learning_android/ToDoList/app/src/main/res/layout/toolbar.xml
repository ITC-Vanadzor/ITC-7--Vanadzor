<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/appbar"
android:layout_width="match_parent"
android:layout_height="wrap_content"
app:elevation="0dp"
app:theme="@style/AppTheme.AppBarOverlay">

<android.support.v7.widget.Toolbar
    android:id="@+id/toolbar"
    style="@style/MyMenuTextAppearance"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_size"
    app:title="@string/title_activity_new_task"
    app:titleTextColor="@color/white">
    <Button
        android:id="@+id/submit_task"
        android:layout_height="@dimen/task_submitting_button_size"
        android:layout_width="@dimen/task_submitting_button_size"
        android:background="@drawable/check"
        android:layout_gravity="right"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_margin"
        android:onClick="submitTask"/>

</android.support.v7.widget.Toolbar>
</android.support.design.widget.AppBarLayout>
